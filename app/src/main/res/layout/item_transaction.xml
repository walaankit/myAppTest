<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tagHash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/hashTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tagHash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tagHash"
        />

    <TextView
        android:id="@+id/tagDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_time_in_ist"
        app:layout_constraintTop_toBottomOf="@id/hashTextView"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tagDate"
        app:layout_constraintStart_toEndOf="@id/tagDate"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tagValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usd_value"
        app:layout_constraintTop_toBottomOf="@id/dateTextView"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/valueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tagValue"
        app:layout_constraintStart_toEndOf="@id/tagValue"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>